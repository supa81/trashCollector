@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dayList = new SelectList(
       new List<SelectListItem>
       {
            new SelectListItem{Text = "Sunday", Value = "Sunday"},
            new SelectListItem{Text = "Monday", Value = "Monday"},
             new SelectListItem{Text = "Tuesday", Value = "Tuesday"},
              new SelectListItem{Text = "Wednesday", Value = "Wednesday"},
               new SelectListItem{Text = "Thursday", Value = "Thursday"},
                new SelectListItem{Text = "Friday", Value = "Friday"},
                 new SelectListItem{Text = "Saturday", Value = "Saturday"},
       }, "Value", "Text");
}

<h1>Index</h1>

<form asp-action="Index">
    <div class="form-group">
        <label class="control-label"></label>
        <select class="form-control" asp-items="dayList"></select>
        <span>class="text-danger" "dayList"</span>

    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>


</form>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyPickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDayOfService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDayOfService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraOneTimePickUpButton)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraOneTimePickUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyPickUpDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDayOfService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDayOfService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraOneTimePickUpButton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraOneTimePickUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
